{
    "type": "object",
    "properties": {
        "rules": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "pattern": {
                        "type": "string",
                        "pattern": "^((\\w+\\.[\\.\\w]*\\/)?([^\\s]+\\/)?)([^\\/\\:@]+)((@sha256:([a-f0-9]{64}))|(:(.+)))?$"
                    },
                    "delegations": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "pattern": "[\\d\\w]*"
                        }
                    },
                    "verify": {
                        "type": "boolean"
                    },
                    "notary": {
                        "type": "string"
                    },
                    "key": {
                        "type": "string"
                    }
                },
                "required": [
                    "pattern",
                    "verify"
                ]
            }
        }
    },
    "required": [
        "rules"
    ]
}